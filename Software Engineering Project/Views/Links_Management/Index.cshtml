
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    if (Convert.ToInt32(Session["RoleID"]) != 0 || Session["AccountID"] == null)
    {
        Response.Redirect("~/Home/Index");
    }
}

@using Software_Engineering_Project.Models;
@model Tuple<IEnumerable<LinksData>,IEnumerable<Role>,IEnumerable<Status_Entity>>



<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
</head>

<body>
    <div>
        <table class="table">
            <tr>
                <th>URL</th>
                <th>Role</th>
                <th>Status</th>

            </tr>



            @for (int idx = 0; idx < Model.Item1.Count(); idx++)
            {
                 using (Html.BeginForm("EditRole", "Links_Management", FormMethod.Post))
                {
                <tr>
                <td>@Html.DisplayFor(model => model.Item1.ElementAt(idx).URL)</td>
                <td>
                    @Html.DropDownListFor(model => model.Item1.ElementAt(idx).Role_Name,
                     new SelectList(Model.Item2),
                     Model.Item1.ElementAt(idx).Role_Name)
                </td>

                <td>
                    @Html.DropDownListFor(model => model.Item1.ElementAt(idx).Status,
                     new SelectList(Model.Item3),
                     Model.Item1.ElementAt(idx).Status)
                </td>

                <td>
                    <input type="Submit" value="Save Changes" />
                </td>

                </tr>
                }
            }
        </table>

    </div>
   
</body>
</html>
